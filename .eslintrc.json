{
    "extends": [
        "plugin:vue/recommended",
        "@vue/airbnb"
    ],
    "overrides": [
        {
            "files": ["*.vue"],
            "rules": {
                "indent": "off"
            }
        }
    ],
    "rules": {
        "indent": [2, 4],
        "vue/html-indent": [2, 4],
        "vue/script-indent": [2, 4, {
            "baseIndent": 1
        }],

        "vue/singleline-html-element-content-newline": 0,
        "vue/eqeqeq": 2,
        "max-len": [2, 300],
        "no-plusplus": 0
    },
    "plugins": [
        "html"
    ]
}
